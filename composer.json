{
    "name": "shorock/islandora_composer",
    "description": "Composer template for Islandora projects",
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        },
        "islandora": {
            "type": "composer",
            "url": "https://islandorapkg.shorock.com"
        }
    },
    "require": {
        "composer/installers": "~1.0",
        "derhasi/composer-preserve-paths": "0.1.*",
        "drupal/drupal": "7.*",
        "islandora/islandora": "*",
        "islandora/islandora_pathauto": "*",
        "islandora/islandora_solution_pack_collection": "*",
        "islandora/islandora_solution_pack_image": "*",
        "islandora/islandora_solution_pack_pdf": "*",
        "drupal/views": "*",
        "drupal/views_ui": "*",
        "drupal/bootstrap": "*"
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "scripts": {
        "post-create-project-cmd": [
            "rm README.md LICENSE .travis.yml phpunit.xml.dist"
        ]
    },
    "config": {
        "vendor-dir": "vendor"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "web/": [
                "type:drupal-core"
            ],
            "web/sites/all/modules/contrib/{$name}/": [
                "type:drupal-module"
            ],
            "web/sites/all/themes/contrib/{$name}/": [
                "type:drupal-theme"
            ],
            "web/sites/all/libraries/{$name}/": [
                "type:drupal-library"
            ],
            "web/sites/all/drush/{$name}/": [
                "type:drupal-drush"
            ],
            "web/profiles/{$name}/": [
                "type:drupal-profile"
            ]
        },
        "preserve-paths": [
            "web/sites/all/modules/contrib",
            "web/sites/all/themes/contrib",
            "web/sites/all/libraries",
            "web/sites/all/drush",
            "web/sites/default/settings.php",
            "web/sites/default/files"
        ]
    }
}
